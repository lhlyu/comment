{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "allowSyntheticDefaultImports": true,
        "paths": {}
    },
    "include": ["./src/**/*"]
}
